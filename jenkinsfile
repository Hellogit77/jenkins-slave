pipeline {
    agent {
        label 'generic'
    }
    stages {
        stage("Install epel")
            steps {
                sh """
                    yum install epel-release -y
                """
            }
        stage("Install setuptools")
            steps {
                sh """
                    yum install python-setuptools -y
                """
            }
        stage("use wget")
            steps {
                sh """
                    wget https://bootstrap.pypa.io/get-pip.py
                """
            }
        stage("Setup pip")
            steps {
                sh """
                    python get-pip.py
                """
            }        
        stage("Setup script") {
            steps {
                sh """
                    pip install -U pytest -y
                """
            }
        }
        stage("Run unit tests") {
            steps {
                sh """
                    python -m pytest
                """
            }
        }
    }
    post {
        always {
            sh """
                pip uninstall pytest -y
            """
        } //always
    } //post
} //pipeline